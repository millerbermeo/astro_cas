---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Card from "../components/Card.astro"
import Contenido from "../components/Contenido.astro"
---

<Layout title="Welcome to Astro.">
	<main
		class="w-full flex items-center p-20 bg-gradient-to-r from-green-50 to-green-500 h-screen"
	>
		<Navbar />

		<div class="w-[100%]">
			<div class="relative">
				<h1 class="font-black text-8xl opacity-80 text-blue-900">
					Centro <br /> de Acopio
				</h1>
				<span
					class="bg-blue-100 absolute top-16 right-44 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-blue-400 dark:text-white"
					>Sena Yamboro</span
				>
			</div>
			<p class="text-gl my-8 text-gray-600 text-xl">
				Uidea features the best website design for your inspiration.
				Hand-picked, updated daily.
			</p>


			<div class="flex justify-start items-center gap-4">
				<button
					type="button"
					class="inline-block rounded bg-yellow-500 px-6 py-2 h-10 text-xs font-medium uppercase leading-normal text-white shadow-md transition duration-150 ease-in-out hover:bg-yellow-600 focus:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-500 active:bg-yellow-700 dark:bg-yellow-500 dark:hover:bg-yellow-600 dark:focus:bg-yellow-600 dark:active:bg-yellow-700"
				>
					About
				</button>

				<button
					type="button"
					class="inline-block rounded border-2 border-blue-500 px-6 py-2 text-xs font-medium uppercase leading-normal text-blue-500 transition duration-150 ease-in-out hover:border-blue-600 hover:bg-gray-100 hover:text-blue-600 focus:border-blue-600 focus:text-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 active:border-blue-700 active:text-blue-700 dark:border-blue-500 dark:hover:bg-gray-200 dark:focus:bg-gray-200 dark:active:bg-gray-300"
				>
					Info
				</button>
			</div>
		</div>

		<img class="w-[50%]" src="fondo.svg" alt="" />
	</main>


	<section class="w-full h-screen flex justify-center gap-20 px-20 bg-gray-200">
		<Card/>
		<Contenido/>
	</section>

	<section class="w-full flex items-center rounded-tl-full p-20 bg-gradient-to-r from-green-50 to-green-500 h-screen"
	>


	</section>
</Layout>

